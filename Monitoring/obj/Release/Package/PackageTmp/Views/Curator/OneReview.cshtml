@model Monitoring.Models.reviews_user

@{
    ViewBag.Title = "Просмотр отзыва";
}


<!-- МОДАЛЬНОЕ ОКНО ФОРМЫ -->
<div id="dialog-form" title="Ответить на отзыв">
    <form method="post" action="/Curator/SendAnswer">
        <input type="hidden" name="id" value="@Model.id"/>
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label for="message">Ваше сообщение:</label>
                    <textarea required class="text ui-widget-content ui-corner-all form-control" rows="10" id="message" name="message"></textarea>
                </div>
            </div>
        </div>
        <input type="submit" class="btn btn-default" value="Отправить">
    </form>
</div>
<!-- МОДАЛЬНОЕ ОКНО ФОРМЫ -->



<div class="container" style="margin-top: 50px;">
    <div class="single review round-div">
        <div class="row d-flex justify-content-between">
            <div class="time d-flex align-items-center">
                <img src="~/Content/img/icons/clock.svg" class="icon">
                <p>@Html.DisplayFor(model => model.date_create)</p>
            </div>
            <div class="d-flex align-items-center">
                <div class="answer-icon d-flex align-items-center">
                    <img class="icon" src="~/Content/img/icons/chat.svg">
                    <p>@if (Model.curator_answer != null) { Write("Отвечено"); } else { Write("Без ответа"); }</p>
                </div>
                <div class="review-type @if (Model.type_reviews.id == 1) { Write("yellow-rw"); }
            else if (Model.type_reviews.id == 2) { Write("green-rw"); }
                  @if (Model.type_reviews.id == 3) { Write("red-rw"); }
                   @if (Model.type_reviews.id == 4) { Write("blue-rw"); }">
                    <span class="type-rw"></span>
                    @Html.DisplayFor(model => model.type_reviews.name)
                </div>
            </div>
        </div>
        <div class="row author-rw">
            <h5>@Html.DisplayFor(model => model.author_name)</h5>
        </div>
        <div class="row text-rw">
            @Html.DisplayFor(model => model.text)
        </div>
        <div class="row button-cover d-flex justify-content-end">
            @if (Model.curator_answer == null)
            {
                <button id="to-answer-rw" class="btn btn-success">Ответить</button>
            }
        </div>
    </div>

    @if (Model.curator_answer != null)
    {
        <div id="answer" class="row">
            <div class="col-12">
                <div class="round-div answer">
                    @*<div class="time d-flex align-items-center">
                        <img src="~/Content/img/icons/clock.svg" class="icon">
                        <p>@Html.DisplayFor(model => model.date_create)</p>
                    </div>*@
                    <h4>Ваш ответ</h4>
                    <div class="answer-text">
                        @Model.curator_answer
                    </div>
                </div>
            </div>
        </div>
    }
</div>



