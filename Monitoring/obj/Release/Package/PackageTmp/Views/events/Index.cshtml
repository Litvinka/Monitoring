@model IEnumerable<Monitoring.Models.events>

@{
    ViewBag.Title = "Уведомления";
}

<div class="container" style="margin-top: 50px;">

    <div class=""></div>

    <div class="row col-12 event_div">
        <h4>Уведомления</h4>
        <div class="events col-md-12">
            @foreach (var item in Model)
            {
                <div class="event round-div">
                    <div>
                        <p class="message_small_text">@Html.DisplayFor(modelItem => item.text)</p>
                        <p class="message_small_date">@Html.DisplayFor(modelItem => item.date_created)</p>
                    </div>
                </div>
            }

            @if (Model.Count() == 0)
            {
                <p>У Вас нет ни удного уведомления</p>
            }
        </div>
    </div>
</div>
