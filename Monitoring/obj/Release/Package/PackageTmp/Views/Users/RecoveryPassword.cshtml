@model IEnumerable<Monitoring.Models.Role>
@{
    ViewBag.Title = "Восстановление пароля";
}

<div class="container start-text">
    <p align="center">Для восстановления пароля введите email. На него придет новый пароль для входа в систему.</p>
</div>

<div class="user-reg-wrapper round-div">
    <h4 align="center">Вход</h4>
    <span class="error">@if (ViewBag.message != null) { Write(ViewBag.message); }</span>
    <form id="user-singin-form" method="post" action="/Users/RecoveryPassword" class="col-md-12">
        <div class="row">
            <div class="form-group col-12">
                <label for="email1">Email:</label>
                <input type="email" class="form-control" name="email" id="email1" value="@if (ViewBag.email != null) { @ViewBag.email } " placeholder="Введите Email" required>
            </div>
        </div>
        @if (ViewBag.email != null)
        {
            <div class="row">
                <div class="form-group col-12">
                    <label for="role">Роль:</label>
                    <select class="form-control" id="role" name="role" required>
                        @foreach (var item in Model)
                        {
                            <option value="@item.id">@item.name</option>
                        }
                    </select>
                </div>
            </div>
        }
        <div class="row center-block btns-bottom">
            <input type="submit" id="user-singin" class="btn btn-primary" value="Выслать новый пароль на email"/>
        </div>
    </form>
</div>