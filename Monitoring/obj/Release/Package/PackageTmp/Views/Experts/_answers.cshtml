@model IEnumerable<Monitoring.Models.Experts_comments>

    @for (int i = 0; i < Model.Count(); ++i)
    {
        <div class="one_block">
            <div class="block_text">
                <p class="short_text">
                    <b>@(i + 1). @Model.ElementAt(i).Criteria.short_name</b>
                    <a class="read_document" href="#">подробнее</a>
                </p>
                <p class="document_text">@Model.ElementAt(i).Criteria.document_name</p>
            </div>
            <div class="block_radio">
                @if (Model.ElementAt(i).answer == 1) { Write("Да"); }
                else
                {
                    Write("Нет");
                }
            </div>
            <div class="block_comment">
                <p>@Model.ElementAt(i).comment</p>
            </div>
        </div>
    }
