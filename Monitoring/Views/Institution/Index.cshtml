@model IEnumerable<Monitoring.Models.education__institution>

@{
    ViewBag.Title = "Список организаций";
}

<div id="dialog" class="">
    <p>
        Вы уверены, что хотите удалить данную организацию?
    </p>
</div>

<div class="container round-div" style="margin-top: 50px;">

    <div id="institutions_list">
        <table id="example1" class="user_list table table-bordered table-striped">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Область</th>
                    <th>Район</th>
                    <th>Полное наименование</th>
                    <th>Сайт</th>
                    <th>Телефон</th>
                    <th style="width:15%">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); ++i)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Html.DisplayFor(modelItem => Model.ElementAt(i).district.area.name)</td>
                        <td>@Html.DisplayFor(modelItem => Model.ElementAt(i).district.name)</td>
                        <td>@Html.DisplayFor(modelItem => Model.ElementAt(i).full_name)</td>
                        <td>@Html.DisplayFor(modelItem => Model.ElementAt(i).audit_object.adress_site)</td>
                        <td>@if(Model.ElementAt(i).phone!=null) { @Model.ElementAt(i).phone; }</td>
                        <td>
                            <div class="btn-flex">
                                <input type="hidden" name="institution_id" class="institution_id" value="@Model.ElementAt(i).id" />
                                <a href="@Url.Action("Details","Institution",new { id=Model.ElementAt(i).id })" class="btn btn-info btn-xs btn-adm">Инфо</a>
                                <button title="Удалить" class="btn btn-danger btn-xs"><img class="icon" src="~/Content/img/icons/delete-button.svg"></button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>№</th>
                    <th>Область</th>
                    <th>Район</th>
                    <th>Полное наименование</th>
                    <th>Сайт</th>
                    <th>Телефон</th>
                    <th style="width:15%">&nbsp;</th>
                </tr>
            </tfoot>
        </table>
    </div>

    <div><a id="get_sites" href="#" class="btn btn-primary active">Получить ссылку для скачивания списка сайтов</a> 
        <a href="/sites.json" download id="link_get_sites">Скачать список сайтов</a>
    </div>
    @*<div>
        <a href="@Url.Action("GetExcelUO","Institution")" class="btn btn-danger">Загрузить список УО</a>
    </div>*@

</div>
