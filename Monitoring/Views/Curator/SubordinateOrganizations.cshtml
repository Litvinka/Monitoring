@model IEnumerable<Monitoring.Models.education__institution>
@{
    ViewBag.Title = "Подчиненные организации";
}

<div class="container round-div" style="margin-top: 50px;">

    <div id="institutions_list">
        <table id="example1" class="user_list table table-bordered table-striped">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Область</th>
                    <th>Район</th>
                    <th>Полное наименование</th>
                    <th>Сайт</th>
                    <th>Телефон</th>
                    <th style="width:15">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); ++i)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Html.DisplayFor(modelItem => Model.ElementAt(i).district.area.name)</td>
                        <td>@Html.DisplayFor(modelItem => Model.ElementAt(i).district.name)</td>
                        <td>@Html.DisplayFor(modelItem => Model.ElementAt(i).full_name)</td>
                        <td>@Html.DisplayFor(modelItem => Model.ElementAt(i).audit_object.adress_site)</td>
                        <td>@if (Model.ElementAt(i).phone != null)
                        { @Model.ElementAt(i).phone;
                        }</td>
                        <td>
                            <div class="btn-flex">
                                <input type="hidden" name="institution_id" class="institution_id" value="@Model.ElementAt(i).id" />
                                <a href="@Url.Action("Details","Institution",new { id=Model.ElementAt(i).id })" class="btn btn-info btn-xs btn-adm">Инфо</a>
                                <a href="@Url.Action("InstitutionMonitoring","Institution",new { edu_id=Model.ElementAt(i).id })" class="btn btn-primary btn-xs">Мониторинг</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>№</th>
                    <th>Область</th>
                    <th>Район</th>
                    <th>Полное наименование</th>
                    <th>Сайт</th>
                    <th>Телефон</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>

</div>
