@model IEnumerable<Monitoring.Models.experts>

@{
    ViewBag.Title = "Результаты распределения";
}

@if (Model.Count() > 0)
{
<div class="container round-div" style="margin-top: 50px;">
    <h4>Результаты распределения</h4>
    <div>
        <p>Сайтов на проверке: @ViewBag.all</p>
        <p>Проверено: @ViewBag.comment</p>
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        №
                    </th>
                    <th>
                        Область
                    </th>
                    <th>
                        Район
                    </th>
                    <th>
                        Эксперт
                    </th>
                    <th>
                        Количество сайтов
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); ++i)
                {
                    <tr>
                        <td>
                            @(i + 1)
                        </td>
                        <td>
                            @Model.ElementAt(i).education__institution.district.area.name
                        </td>
                        <td>
                            @Model.ElementAt(i).education__institution.district.name
                        </td>
                        <td>
                            @Model.ElementAt(i).User.Surname @Model.ElementAt(i).User.Name @Model.ElementAt(i).User.Patronumic
                        </td>
                        <td>
                            @Model.ElementAt(i).site_experts.Count(p => p.expert_id == Model.ElementAt(i).id && p.monitoring_id == ViewBag.monitoring_id)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
}